<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="ru.ltow.wotd">

  <uses-sdk
    android:minSdkVersion="12"
    android:targetSdkVersion="27" />

  <application
    android:name=".App"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <activity android:name=".Main" android:screenOrientation="landscape">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".Game" android:screenOrientation="landscape"></activity>
    <activity android:name=".About" android:screenOrientation="landscape"></activity>
    <activity android:name=".DBEditor" android:screenOrientation="landscape"></activity>
  </application>

</manifest>